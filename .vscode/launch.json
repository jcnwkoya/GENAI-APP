    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chalice",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/chalice",
            "args": [
                "local",
                "--no-autoreload",
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true,
            "cwd": "${workspaceFolder}/user_app",
            "env": {
                "AWS_PROFILE": "ritera-dev"
            }
        }
    ]
}
